{
  "_id": "view",
  "template": "builtin:template",
  "description": "Standard template for a database's views",
  "content": [
    {
      "format": "h1",
      "field": {
        "type": "text",
        "id": "_id"
      }
    },
    {
      "format": "p",
      "cells": [
        {
          "text": "Type"
        },
        {
          "field": {
            "type": "text",
            "id": "type"
          }
        }
      ]
    },
    {
      "format": "h2",
      "text": "Index"
    },
    {
      "format": "p",
      "id": "index",
      "cell": {
        "field": {
          "id": "index",
          "type": "text"
        }
      }
    },
    {
      "format": "h2",
      "text": "Selector"
    },
    {
      "format": "p",
      "id": "selector",
      "map": {
        "template": {
          "format": "p",
          "id": "template",
          "map": {
            "$regex": {
              "format": "p",
              "field": {
                "id": "$regex",
                "type": "text"
              }
            }
          }
        }
      }
    },
    {
      "format": "p",
      "cells": [
        {
          "text": "Show Doc Link"
        },
        {
          "field": {
            "type": "text",
            "id": "show_doc_link"
          }
        }
      ]
    },
    {
      "format": "h2",
      "text": "Columns"
    },
    {
      "format": "p",
      "field": {
        "id": "columns",
        "type": "json"
      }
    }
  ]
}
