{
  "$id": "https://stephenfrancis.online/nucifera/view.schema.json",
  "title": "View",
  "description": "A view of documents in a database",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string"
    },
    "template": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "index": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "selector": {
      "type": "object",
      "properties": {
        "template": {
          "type": "object",
          "properties": {
            "$eq": {
              "type": "string"
            },
            "$regex": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      },
      "required": ["template"],
      "additionalProperties": false
    },
    "show_doc_link": {
      "type": "string"
    },
    "columns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "field": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "type": {
                "enum": [
                  "date",
                  "image",
                  "json",
                  "number",
                  "options",
                  "richtext",
                  "text"
                ]
              }
            },
            "required": ["id", "type"],
            "additionalProperties": false
          },
          "label": {
            "type": "string"
          }
        },
        "required": ["field", "label"],
        "additionalProperties": false
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": ["_id", "template", "type", "index", "selector", "columns"],
  "additionalProperties": false
}
